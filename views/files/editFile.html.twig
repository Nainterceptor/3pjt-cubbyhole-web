{% extends '../global/app.html.twig' %}

{% block body %}
    <h1> {{ filename }} </h1>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <form role="form" method="post">
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="name" value="{{ filename }}" class="form-control" id="name">
                    </div>
                </div>
                <hr>
                <div class="form-group">
                    <label for="rights" class="col-sm-2 control-label">Rights</label>
                    <div class="col-sm-10">
                        <button class="btn pull-left add-from-prototype" data-target=".table-to-add" type="button"><span class="glyphicon glyphicon-plus"></span></button>
                        <table id="rights-table" class="table-to-add" border="1" data-prototype="{{ '<tr data-index="__i__"><td><input type="text" name="user[__i__][email]" class="form-control" id="email" style="border: none"> </td><td> <input type="text" name="user[__i__][rights]" class="form-control" id="right" style="border: none"> </td></tr>'|e }}">
                            {% for i,user in users %}
                                <tr data-index="{{ i }}">
                                    <td> <input type="text" name="user[{{ i }}][email]" value="{{ user.email }}" class="form-control" id="email" style="border: none"> </td>
                                    <td> <input type="text" name="user[{{ i }}][rights]" value="{{ user.rights }}" class="form-control" id="right" style="border: none"> </td>
                                </tr>
                            {% endfor %}
                        </table>
                        <input type="checkbox" name="cascade" value="Cascade"> Recursive </input>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Apply</button>
                        <a href="/user/webapp">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock body %}

{% block pageJavascript %}
    {% parent %}
    <script type="text/javascript">
        jQuery(document).ready(function(){
            jQuery('.add-from-prototype').bind('click', function(){
                var table = jQuery(this).siblings('.table-to-add');
                var i = 0;
                jQuery('tr',table).each(function() {
                    i = parseInt(jQuery(this).attr('data-index'));
                });
                i++;
                console.log(i);
                table.append(table.attr('data-prototype').replace(/__i__/g, i));
            });
        });
    </script>
{% endblock pageJavascript %}