{% extends '../global/app.html.twig' %}

{% block body %}
    <h1> {{ name }} </h1>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <form role="form" method="post">
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="name" value="{{ name }}" class="form-control" id="name">
                    </div>
                </div>
                <hr>
                <div class="form-group">
                    <label for="rights" class="col-sm-2 control-label">Rights</label>
                    <div class="col-sm-10">
                        <table id="rights-table" border="1">
                        {% for i,user in users %}
                            <tr>
                                <td> <input type="text" name="user[{{ i }}][email]" value="{{ user.email }}" class="form-control" id="email" style="border: none"> </td>
                                <td> <input type="text" name="user[{{ i }}][rights]" value="{{ user.rights }}" class="form-control" id="right" style="border: none"> </td>
                            </tr>
                        {% endfor %}
                        </table>
                        <input type="checkbox" name="cascade" value="Cascade"> Recursive </input>
                    </div>
                </div>
                <div class="form-group">
                    <label for="content" class="col-sm-2 control-label">Content</label>
                    <div class="col-sm-10">
                        <input type="text" name="name" value="{{ name }}" class="form-control" id="name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Apply</button>
                        <a href="/user/webapp">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock body %}